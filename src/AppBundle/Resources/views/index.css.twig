
html, body {
    height: 100%;
    width: 100%;
    padding: 0;
    margin: 0;
}

body {
    background-color: #FAFAFA;
    color: #263238;
    font-family: Helvetica, Arial, sans-serif;
    font-size: 14px;
    line-height: 1.4;
}

body > .loader {
    position: absolute;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, .1);
    z-index: 1000;
}

body > .loader > .text {
    color: #263238;
    padding: 1em;
}

.btn {
    display: inline-block;
    padding: .5em;
    font-size: 1.3rem;
    border-radius: .1em;
    font-weight: bold;
    cursor: pointer;
    margin: .2em;
    text-align: center;
}

.btn.new {
    background: #388E3C;
    color: #FFF;
}

.btn.continue {
    background: #0288D1;
    color: #FFF;
}

.title {
    font-size: 1.5em;
    text-align: center;
    color: #455A64;
    padding: 2em;
}

.menu {
    display: flex;
    flex-direction: column;
    width: 15em;
    margin: auto;
}

.scope {
    position: absolute;
    bottom: 3em;
    text-align: center;
    width: 100%;
    font-size: 1.5em;
    color: #B0BEC5;
}

.game {
    top: 0;
    left: 0;
    position: absolute;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.game > .btn.new {
    top: 1em;
    right: 1em;
    position: absolute;
}

.game .playing-field {
    width: 21.3em;
    display: flex;
    flex-wrap: wrap;
}

.game .playing-field .cell {
    width: 7em;
    height: 7em;
    border: 1px solid #B0BEC5;
    margin-right: -1px;
    margin-bottom: -1px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.game .playing-field .cell i {
    font-size: 4em;
    color: #455A64;
}

.game .playing-field .cell.empty {
    cursor: pointer;
}

.game .playing-field .cell.empty:hover {
    background-color: #CFD8DC;
}

.game .winner {
    text-align: center;
    background-color: rgba(0, 0, 0, .7);
    color: #FFF;
    font-size: 2em;
    position: absolute;
    padding-top: 3em;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
}